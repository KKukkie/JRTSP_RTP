<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="2 seconds">

    <property name="LOGS_ABSOLUTE_PATH" value="/home/jrtsp/jrtsp_rtp/logs" />

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_ABSOLUTE_PATH}/jrtsp_rtp.log</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5p] [%t] %m - \(%F:%L\)%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOGS_ABSOLUTE_PATH}/jrtsp_rtp.logger.%d{yyyyMMdd}.%i.log</fileNamePattern>
            <maxFileSize>1000MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- trace/debug/info/warn/error -->
    <root level="debug">
        <appender-ref ref="FILE" />
    </root>

</configuration>
